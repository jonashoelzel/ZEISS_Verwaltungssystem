@page "/oldLandingPage"
@using Zeiss.PublicationManager.Data.DataSet.Model
@using Zeiss.PublicationManager.UI

@inject NavigationManager NavigationManager
@inject PublicationDataSetModel Publication

<img src="https://upload.wikimedia.org/wikipedia/commons/9/95/Zeiss_logo.svg" class="logo" />

<button class="add_publication" type="button" @onclick="NavigateToAddTitleComp">Veröffentlichung hinzufügen</button>
<button class="search_publication" type="button" @onclick="NavigateToSearchPublicationComp">Fachbeitrag suchen</button>

@code
{
    private void NavigateToAddTitleComp()
    {
        Publication = new PublicationDataSetModel();
        NavigationManager.NavigateTo("addTitle");
    }

    private void NavigateToSearchPublicationComp()
    {
        NavigationManager.NavigateTo("searchPub");
    }
}
