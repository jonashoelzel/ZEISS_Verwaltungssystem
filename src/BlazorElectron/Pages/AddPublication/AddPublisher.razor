@page "/addPublisher"
@using Zeiss.PublicationManager.Data.DataSet.Model
@using Zeiss.PublicationManager.Business.Logic.IO.Write

@inject NavigationManager NavigationManager
@inject PublicationDataSetModel Publication

<img src="https://upload.wikimedia.org/wikipedia/commons/9/95/Zeiss_logo.svg" class="logo" />

@if (ShowPopup)
{
    <div class="modal fade" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title w-100 text-center">Erfolgreich gespeichert</h3>
                </div>
                <div class="modal-body">
                    <p>Die Veröffentlichung wurde der Liste hinzugefügt.</p>
                    <button type="submit" id="backToLandingPage" class="form-control" @onclick="@NavigateToLandingPage">Zurück zur Startseite</button>
                </div>
            </div>
        </div>
    </div>
}

<EditForm Model="@Publication.PublishedBy">

    <section class="publisher panel-default">
        <header class="panel-heading">
            <h4 class="panel-title">Verlag des Mediums</h4>
        </header>
        <div class="panel-body">
            <form>
                <label for="publisher">Name Verlag</label>
                <InputText id="publisher" class="form-control" @bind-Value="@Publication.PublishedBy.Name" />
            </form>
        </div>
    </section>

    <button class="addPub" type="button" @onclick="Save">Veröffentlichung hinzufügen</button>
    <button class="back" type="button" @onclick="NavigateToPreviousScreen">Zurück</button>
    <button class="continue" type="button" @onclick="NavigateToNextScreen">Weiter</button>
</EditForm>

@code
{
    private void NavigateToPreviousScreen()
    {
        NavigationManager.NavigateTo("addDescription");
    }

    private void NavigateToNextScreen()
    {
        NavigationManager.NavigateTo("addTags");
    }

    private void NavigateToLandingPage()
    {
        NavigationManager.NavigateTo("/");
    }

    private void Save()
    {
        WriteData.Save(Publication);
        PopupSuccessfulSave();
    }

    // Dialogfenster zum erfolgreichen Hinzufügen einer Veröffentlichung
    bool ShowPopup = false;
    private void PopupSuccessfulSave()
    {
        ShowPopup = true;
    }

    @*
        private void Preview()
        {
            NavigationManager.NavigateTo("Preview");
        }
    *@
}
