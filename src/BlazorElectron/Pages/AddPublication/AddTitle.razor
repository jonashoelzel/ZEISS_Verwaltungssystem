<EditForm Model="@Publication" OnValidSubmit="NavigateToNextScreen">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <section class="title panel-default">
        <header class="panel-heading">
            <h4 class="panel-title">Dokument</h4>
        </header>
        <div class="panel-body">
            <label for="workingtitle">Titelname</label>
            <InputText id="workingtitle" DisplayName="workingtitle" @bind-Value="@Publication.WorkingTitle" /><br />
        </div>
    </section>

    <button class="back" type="button" @onclick="NavigateToPreviousScreen">
        Startseite
    </button>
    <button class="continue" type="submit" @onclick="NavigateToNextScreen">
        Weiter
    </button>
</EditForm>

@code
{
    private void NavigateToPreviousScreen()
    {
        NavigationManager.NavigateTo("/");
    }

    private void NavigateToNextScreen()
    {
        NavigationManager.NavigateTo("addAuthor");
    }

